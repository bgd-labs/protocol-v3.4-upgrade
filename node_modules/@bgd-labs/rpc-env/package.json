{
  "name": "@bgd-labs/rpc-env",
  "version": "2.2.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "format": "biome check --write",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "src/*.ts",
    "dist/lib*",
    "dist/cli*"
  ],
  "bin": "./dist/cli.js",
  "main": "./dist/lib.js",
  "module": "./dist/lib.mjs",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.js"
      },
      "import": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.mjs"
      }
    }
  },
  "author": "Jonas Strassel <jonas@bdglabs.com>",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.0",
    "lefthook": "^1.8.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "viem": "^2.21.48",
    "vitest": "^2.1.6",
    "dotenv": "^16.4.5"
  },
  "tsup": {
    "entry": [
      "src/action.ts",
      "src/lib.ts",
      "src/cli.ts"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "dts": true,
    "treeshake": true,
    "format": [
      "esm",
      "cjs"
    ]
  }
}
